<body>
  <div class="container">
    <h1>🎬 Joguinho do Cinema 🎬</h1>
    <div id="quiz">
      <div id="pergunta1">
        <p>Qual o seu nome?</p>
        <input type="text" id="nomeInput" placeholder="Digite seu nome..." />
        <br />
        <button onclick="proximaPergunta()">Continuar</button>
      </div>

      <div id="pergunta2" style="display:none;">
        <p>Qual gênero de filme você prefere?</p>
        <button onclick="responder('Ação')">Ação</button>
        <button onclick="responder('Comédia')">Comédia</button>
        <button onclick="responder('Romance')">Romance</button>
        <button onclick="responder('Terror')">Terror</button>
      </div>

      <div id="pergunta3" style="display:none;">
        <p>O que você mais gosta de comer no cinema?</p>
        <button onclick="responder2('Pipoca')">Pipoca</button>
        <button onclick="responder2('Chocolate')">Chocolate</button>
        <button onclick="responder2('Nachos')">Nachos</button>
        <button onclick="responder2('Bala de goma')">Bala de goma</button>
      </div>

      <div id="resultado" style="display:none;"></div>
    </div>
  </div>

  <script>
    let nome = '';
    let genero = '';
    let comida = '';

    function proximaPergunta() {
      nome = document.getElementById('nomeInput').value.trim();
      if (nome === '') {
        alert('Por favor, digite seu nome!');
        return;
      }
      document.getElementById('pergunta1').style.display = 'none';
      document.getElementById('pergunta2').style.display = 'block';
    }

    function responder(respostaGenero) {
      genero = respostaGenero;
      document.getElementById('pergunta2').style.display = 'none';
      document.getElementById('pergunta3').style.display = 'block';
    }

    function responder2(respostaComida) {
      comida = respostaComida;
      document.getElementById('pergunta3').style.display = 'none';
      const resultado = document.getElementById('resultado');
      resultado.innerHTML = `
        <p>🎉 ${nome}, você tem ótimo gosto!</p>
        <p>💡 Que tal um filme de <strong>${genero}</strong> com <strong>${comida}</strong>?</p>
        <p>🎟️ Topa ir ao cinema comigo? 😄</p>
      `;
      resultado.style.display = 'block';
    }
  </script>
</body>
</html>
